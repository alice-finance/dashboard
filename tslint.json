{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": ["config/**/*.js", "node_modules/**/*.ts"]
  },
  "rules": {
    "interface-name": false,
    "ordered-imports": [
      true,
      {
        "grouped-imports": true,
        "groups": [
          {
            "name": "react",
            "match": "react",
            "order": 0
          }
        ]
      }
    ],
    "object-literal-sort-keys": false,
    "no-empty": false
  }
}
